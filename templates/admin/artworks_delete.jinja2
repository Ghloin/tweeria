{% include "header.jinja2" %}
<div id="main" role="main">
	<style type="text/css">
		#artworks {
			color: #000000;
		}

		#artworks .art {
			float: left;
			width: 170px;
			padding-bottom: 30px;
			font-size: 14px;
		}

		label {
			cursor: pointer;
		}

		label.is_default_True {
			color: red;
			font-weight: bold;
		}

	</style>
	<div class="event-page-border" id="artworks">
		<div class="white-textured-bg cc-page cc-admin-invites-page">
			<form method="POST">
				<input type="hidden" name="type_of_form" value="artworks_delete">

				{% for artwork in artworks %}
					<div class="art">
						<label for="id_{{ artwork._id }}">
							<img src="{{ artwork.img }}" width="100" height="166">
						</label>
						<br>
						<input type="checkbox" name="id_{{ artwork._id }}" id="id_{{ artwork._id }}">
						<label class="is_default_{{ artwork.builtin }}" for="id_{{ artwork._id }}">{{ artwork.name }}</label>
					</div>
				{% endfor %}

				<div class="clear"></div><br><br>
				<input type="submit" value="Remove">
			</form>


		</div>
	</div>
</div>