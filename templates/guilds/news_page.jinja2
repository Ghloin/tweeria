{% include "header.jinja2" %}

<div id="main" role="main">
	<div class="event-page-border">
		<div class="white-textured-bg guild-page guild-news-detail-page">

			{% if login_id == creator %}
				<div class="guild-news-delete-block">
					<form method="post">
						<input type="hidden" name="type_of_form" value="delete_news">
						<input type="hidden" name="UID" value="{{ story.UID }}">
						<input type="submit" value="Delete story" class="delete-news-button">
						<div>You canâ€™t undo this thing!</div>
					</form>
				</div>
			{% endif %}

			<div class="guild-share">
				{% set share_type = "news_page" %}
				{% include "misc/_share_buttons.jinja2" %}
			</div>

			<a class="link-back" href="/guilds/{{ link_name }}">Guild</a>
			&mdash;
			<a class="link-back2" href="/guilds/news">News</a>

			<h2 class="guild-news-title">{% if story.header %} {{ story.header }} {% endif %}</h2>

			<span class="when">{{ story.create_date_f }}</span>

			<div class="guild-news-text">{{ story.text }}</div>

			<div class="guild-news-author">by <a href="/{{ story.author_name }}">@{{ story.author_name }}</a></div>

			{#{% if story.link %}
				<a href="{{ story.link }}" class="guild-news-link">link</a>
			{% endif %}#}

			<div class="disqus-thread">
				<div id="disqus_thread"></div>
			</div>
			<script type="text/javascript">
				/* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
				var disqus_shortname = 'tweeria'; // required: replace example with your forum shortname

				{#var  disqus_config = function() {
					   this.callbacks.afterRender = [function() {
						   console.log("ASADSASDASD");
					   }];
				   }#}
				/* * * DON'T EDIT BELOW THIS LINE * * */
				(function () {
					var dsq = document.createElement('script');
					dsq.type = 'text/javascript';
					dsq.async = true;
					dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
					(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
				})();
			</script>
			<noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments
				powered by Disqus.</a></noscript>

		</div>
	</div>
</div>

<script src="/js/page_scripts/share.js?{{ build }}"></script>
{% include "footer.jinja2" %}